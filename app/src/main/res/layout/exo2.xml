<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EC0A0A">

    <ImageView
        android:id="@+id/wut"
        android:layout_width="360dp"
        android:layout_height="204dp"
        android:background="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/bg_img" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="53dp"
        android:layout_height="73dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/wut"
        app:layout_constraintStart_toStartOf="@+id/wut"
        app:layout_constraintTop_toTopOf="@+id/wut"
        app:srcCompat="@drawable/ic_phone" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/wut"
        app:layout_constraintTop_toTopOf="@+id/wut"
        app:srcCompat="@drawable/ic_min"
        tools:layout_editor_absoluteX="342dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/wut"
        app:layout_constraintTop_toTopOf="@+id/wut"
        app:srcCompat="@drawable/ic_add"
        tools:layout_editor_absoluteX="251dp" />

    <TextView
        android:id="@+id/qte"
        android:layout_width="40dp"
        android:layout_height="52dp"
        android:text="00"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/wut"
        app:layout_constraintTop_toTopOf="@+id/wut"
        tools:layout_editor_absoluteX="296dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="121dp"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        android:text='STARTLIGHT M26 2.4"'
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/wut" />

    <TextView
        android:id="@+id/price"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:text="2100 DA"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />
</androidx.constraintlayout.widget.ConstraintLayout>